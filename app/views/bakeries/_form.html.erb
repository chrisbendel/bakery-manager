<%= form_with model: bakery, local: true do |form| %>
  <div class="form-control">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input input-bordered" %>
  </div>

  <div class="form-control mt-4">
    <%= form.label :description %>
    <%= form.text_area :description, class: "textarea textarea-bordered" %>
  </div>

  <div class="mt-6">
    <%= form.submit bakery.persisted? ? "Update Bakery" : "Create Bakery", class: "btn btn-primary" %>
  </div>
<% end %>
