<h1 class="font-bold text-4xl">Our Bakeries</h1>
<% if @bakeries.present? %>
  <ul class="list-disc pl-5">
    <% @bakeries.each do |bakery| %>
      <li>
        <h2 class="font-semibold text-xl"><%= bakery.name %></h2>
        <p><%= bakery.description %></p>
        <% if bakery.image.attached? %>
          <%= image_tag bakery.image.variant(resize_to_limit: [600, 400]), alt: bakery.name %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bakeries are available at the moment.</p>
<% end %>