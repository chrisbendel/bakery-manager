<div class="flex flex-col items-center gap-2 mt-4">
  <h1>Sign in</h1>

  <%= form_with(url: sign_in_path, method: :post, local: false) do |form| %>
    <div class="flex flex-col gap-4">
      <div>
        <label class="input validator">
          <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <g
              stroke-linejoin="round"
              stroke-linecap="round"
              stroke-width="2.5"
              fill="none"
              stroke="currentColor"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </g>
          </svg>
          <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email" %>
        </label>
        <div class="validator-hint hidden">Enter a valid email address</div>
      </div>

      <label class="input validator">
        <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <g
            stroke-linejoin="round"
            stroke-linecap="round"
            stroke-width="2.5"
            fill="none"
            stroke="currentColor"
          >
            <path d="M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z"></path>
            <circle cx="16.5" cy="7.5" r=".5" fill="currentColor"></circle>
          </g>
        </svg>
        <%= form.password_field :password, required: true %>
        <p class="validator-hint hidden">
          Must be more than 8 characters, including
          <br/>At least one number <br/>At least one lowercase letter <br/>At least one uppercase letter
        </p>
      </label>

      <%= form.submit "Sign in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div>
    <%= link_to "Sign up", sign_up_path %> |
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>